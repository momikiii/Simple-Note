@import "../../colorui/main.wxss";
@import "../../colorui/icon.wxss";
@import "/utils/iconfont.wxss";

.card-box{
  /* animation: slideInDown 1s; */
  border-radius: 14rpx;
  margin: 30rpx auto;
  width: 690rpx;
  height: 340rpx;
  background-color: rgb(45, 49, 51);
  position: relative;
}
.date{
  color: white;
  top: 0rpx;
  position: relative;
  width: 100%;
  height: 100%;
  /* background-color: #66ccff; */
  float: left;
}
.day{
  letter-spacing: 2;
  margin-top: 90rpx;
  text-align: center;
  font-weight: 600;
  font-size: 65rpx;
}
.month{
  letter-spacing: 2;
  color: rgb(218, 218, 218);
  margin-top: 22rpx;
  text-align: center;
  font-size: 24rpx;
}
.more{
  position: absolute;
  color: rgb(236, 236, 236);
  right: 10rpx;
  bottom: 15rpx;
  font-size: 50rpx;
}
