.box{
  height: 100vh;
}
.title{
  animation: flipInX 1s;
  text-align: center;
  font-size: 48rpx;
  font-weight: 600;
  margin-top: 50rpx;
  letter-spacing: 4rpx;
}
.txt-zh{
  animation: flipInX 1s;
  font-weight: 600;
  letter-spacing: 5rpx;
  font-size: 40rpx;
  margin-bottom: 20rpx;
}
.txt-en{
  animation: flipInX 1s;
  font-size: 25rpx;
  margin-bottom: 80rpx;
}
.content{
  text-align: center;
  width: 80%;
  height: 600rpx;
  /* background-color: pink; */
  margin: 70rpx auto;

}
.icon-box{
  position: relative;
  height: 100%;
}
.leftIcon{
  position: absolute;
  left: 35rpx;
  font-size: 42rpx;
  bottom: 0rpx;
}
.date{
  color: rgb(60, 60, 60);
  width: 100%;
  text-align: center;
  font-size: 40rpx;
  font-weight: 700;
  position: absolute;
  bottom: 18rpx;
  /* left: 39%; */
  letter-spacing: 5rpx;
}

.icon{
  position: absolute;
  left: 35rpx;
  font-size: 50rpx;
  bottom: 17rpx;
}
.txt{
  /* margin-top: 260rpx; */
  text-align: center;
  font-size: 45rpx;
  font-weight: 700;
}


.footer{
  text-align: center;
  position: absolute;
  letter-spacing: 1.5rpx;
  left: 22%;
  bottom: 60rpx;
  animation: flipInX 1s;
  color: rgb(128, 128, 128);
  line-height: 1.5;
}
